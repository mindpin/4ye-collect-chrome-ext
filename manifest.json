{
  "manifest_version": 2,

  "name": "4ye Web URL Collector",
  "description": "URL collecting tool.",
  "version": "0.0.5",

  "icons": {
    "32": "collector_32.png",
    "64": "collector_64.png",
    "128": "collector_128.png"
  },

  "permissions": [
    "tabs",
    "<all_urls>",
    "activeTab",
    "identity",
    "storage"
  ],

  "background": {
    "page": "background.html"
  },
  
  "browser_action": {
    "default_icon": "collector_19.png",
    "default_popup": "popup.html"
  }
}
